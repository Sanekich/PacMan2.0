#include <iostream>
#include <conio.h>
#include <stdlib.h>
using namespace std;


char PacMan = 'O';
bool pointEaten[31][32] = { false };
int PacPositionX = 14;
int PacPositionY = 23;
char map1[31][32];
void CreateMap()
{
    char map1Proto[31][32] = {
        "############################",
        "#............##............#",
        "#.####.#####.##.#####.####.#",
        "#o####.#####.##.#####.####o#",
        "#.####.#####.##.#####.####.#",
        "#..........................#",
        "#.####.##.########.##.####.#",
        "#.####.##.########.##.####.#",
        "#......##....##....##......#",
        "######.#####.##.#####.######",
        "     #.#####.##.#####.#     ",
        "     #.##          ##.#     ",
        "     #.## ###  ### ##.#     ",
        "######.## #      # ##.######",
        "      .   #      #   .      ",
        "######.## #      # ##.######",
        "     #.## ######## ##.#     ",
        "     #.##          ##.#     ",
        "     #.## ######## ##.#     ",
        "######.## ######## ##.######",
        "#............##............#",
        "#.####.#####.##.#####.####.#",
        "#.####.#####.##.#####.####.#",
        "#o..##.......  .......##..o#",
        "###.##.##.########.##.##.###",
        "###.##.##.########.##.##.###",
        "#......##....##....##......#",
        "#.##########.##.##########.#",
        "#.##########.##.##########.#",
        "#..........................#",
        "############################" };

    for (int i = 0; i < 31; i++)
    {
        for (int j = 0; j < 32; j++)
        {
            map1[i][j] = map1Proto[i][j];
        }
    }

    map1[PacPositionY][PacPositionX] = PacMan;


    for (int i = 0; i < 31; i++)
    {
        for (int j = 0; j < 32; j++)
        {
            if(i == PacPositionY && j == PacPositionX)
            {
                map1[i][j] = PacMan;
            }
            cout << map1[i][j];
        }
        cout << endl;
    }
}

int main()
{
    char direction;
    CreateMap();


        cout << "you move: ";
        cin >> direction;
        if(direction == 'd')
        {
            PacPositionX += 1;
            map1[PacPositionY][PacPositionX] = PacMan;
            CreateMap;
        }
}
